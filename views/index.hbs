<h1>Create/Read/Update/Delete Example</h1>
<hr>
<h2>My Collection of Pokemon</h2>

<section class="insert">
    <h3>Caught a new one?!</h3>
    
    <form action="/insert" method="post">
        <div class="input">
            <label for="title">Name</label>
            <input type="text" id="title" name="name" required>
        </div>
        <div class="input">
            <label for="Height">Height</label>
            <input type="number" id="content" name="height" required>
        </div>
        <div class="input">
            <label for="Weight">Weight</label>
            <input type="number" id="author" name="weight" required>
        </div>
        <div class ="input">
            <label for="image">Image URL</label>
            <input type="text" id="image" name="image">
        </div>
        <button type="submit">Add to my Collection</button>
    </form>
</section>
<section class="get">
    <h3>Pokemon Collections</h3>
    <a href="/get-data">Show My Collections</a>
    <div>
        {{# each items }}
            <article class="item">
                <div>Name: {{ this.name }}</div>
                <div>Height: {{ this.height }} kg</div>
                <div>Weight: {{ this.weight }} kg</div>
                <div> ID: {{ this._id }} </div>
                <div><img src = "{{ this.image }}" alt = "Image" width = '50px' height = '50px'> </div>

                <form action="/delete" method="post">
        <div>
            <input type="hidden" id="id" name="id" value="{{this._id}}">
        </div>
        <button type="submit">X</button>
    </form>
            </article>
        {{/each}}
    </div>
</section>
<section class="update">
    <h3>Modify existing collections by ID</h3>
    <form action="/update" method="post">
        <div class="input">
            <label for="id">ID</label>
            <input type="text" id="id" name="id">
        </div>
        <div class="input">
            <label for="title">Name</label>
            <input type="text" id="title" name="name">
        </div>
        <div class="input">
            <label for="content">Height</label>
            <input type="text" id="content" name="height">
        </div>
        <div class="input">
            <label for="author">Weight</label>
            <input type="text" id="author" name="weight">
        </div>
         <div class="input">
            <label for="author">Image URL</label>
            <input type="text" id="author" name="image">
        </div>
        <button type="submit">Modify your pokemon character</button>
    </form>
</section>
